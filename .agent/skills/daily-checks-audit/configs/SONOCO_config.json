            "max": 25,
            "warning": 15,
            "description": "ABAP dumps today (observed range: 0-17, avg 4.4)"
        },
        "dumps_yesterday": {
            "max": 40,
            "warning": 25,
            "description": "ABAP dumps yesterday (observed range: 3-24, avg 10.8)"
        },
        "failed_jobs": {
            "max": 5,
            "warning": 2,
            "description": "Failed BASIS jobs (observed range: 0-1, avg 0.1)"
        },
        "failed_updates": {
            "max": 0,
            "warning": 0,
            "description": "Failed updates (observed: always 0)"
