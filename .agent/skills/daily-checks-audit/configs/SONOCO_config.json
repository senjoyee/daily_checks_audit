        "old_locks": {
            "max": 10,
            "warning": 5,
            "description": "Old locks older than 1 day (observed: consistently 1)"
        },
        "trfc_errors": {
            "max": 0,
            "warning": 0,
            "description": "tRFC errors (CPICERR/SYSFAIL)"
        },
        "buffer_swaps": {
            "max": 10000,
            "warning": 5000,
            "description": "Buffer swaps per day"
        }
